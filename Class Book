package ex_siva;

class Book

{

	//properties or attributes

	 public int isbn;

	 public String title;

	 public String author;

	 public int price;

	 //non-arg constructor

	 Book()

	 {}

	 //parametarized constructor

	public Book(int isbn, String title, String author, int price) {

		super();

		this.isbn = isbn;

		this.title = title;

		this.author = author;

		this.price = price;

	}

	public void displaydetails()

	{

		System.out.println("the book details are");

		System.out.println(isbn);

		System.out.println(title);

		System.out.println(author);

		System.out.println(price);

		

	}

	public void discountprice()

	{

	System.out.println("the discounted price is");

	int dp=price%10;

	System.out.println(dp);

	}

	

	 

	

}



public class Ex12 {



	public static void main(String[] args) {

		//create an object for book

		Book b=new Book(2345,"maths","ram",234);

		Book b1=new Book(4345,"english","sita",536);

		//calling methods

		b.displaydetails();

		b.discountprice();

		b1.displaydetails();

		b1.discountprice();

		



	}



}
